<form class="" action="<%= todo_list_url(@todolist)  %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token  %>">
  <input type="hidden" name="_method" value="patch">

  <label for="">Name
    <input type="text" name="todo_list[name]" value="<%= @todolist.name  %>">
  </label>

  <label for="">Description
    <input type="text" name="todo_list[description]" value="<%= @todolist.description  %>">
  </label>

  <input type="submit" name="" value="Update Todo List">

</form>
