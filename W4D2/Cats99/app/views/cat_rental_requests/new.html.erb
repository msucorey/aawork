<h1>Create a new cat rental!</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <br>

  <label for="cat_id">Color</label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
    <option value="--Select Cat ID --" disabled="true" selected="true"> Select Cat's id</option>
    <% Cat.all.each do |cat| %>
    <option value=<%=cat.id%>><%=cat.id.to_s + " " + cat.name%></option>
    <% end %>
  </select>

  <br>
  <label for="start_date">Start date</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%=@catrentalrequest.start_date%>">

  <label for="end_date">End date</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]" value="<%=@catrentalrequest.end_date%>">

  <input type="submit" value="Submit request">

</form>
