
<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <tr>
    <td>Name</td>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Age</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
  </tr>

  <% @cat.cat_rental_requests.order(:start_date).each do |rental| %>
    <tr>
      <td> <%= rental.start_date %> </td>
      <td> <%= rental.end_date %> </td>
      <% if rental.pending? %>
        <%= button_to "Approve", approve_url(rental) , method: :approve %>
        <%= button_to "Deny", deny_url(rental) , method: :deny %>
      <% end %>
    </tr>
  <% end %>
</table>
